<div class="background-color-profile">
  <div class="pseudo text-capitalize" id="dash-ban"><%= current_user.pseudo %>
    <%= cl_image_tag @current_user.avatar, :class => "big-avatar bt-white" %>
  </div>

  <div class="container no-space bkg-line">
    <div class="row">
      <div class="col-12">
        <div class="title-thema spacing-margin" id="tt-padtop">MES PROGRAMMES</div>
        <div class="elements">

          <% @programs_ungoing.each do |user_program| %>

          <%= link_to program_path(user_program.program) do %>
          <div class="element">
            <div class="badge-tasks <%= current_badge(user_program.program.category) %>">
              <%= cl_image_tag user_program.program.icon, crop: :fill, height: 30 %>
            </div>
            <div class="program-title-task"><%= user_program.program.title %></div>
          </div>
        <% end %>
        <% end %>
        </div> <!-- elements -->
      </div> <!-- col-12 -->
    </div> <!-- row -->
  </div> <!-- container -->

  <div class="container no-space bkg-line">
    <div class="row">
      <div class="col-12">
        <div class="title-thema spacing-margin" >MES CHALLENGES</div>
        <div class="elements">

        <% @challenges_ungoing.each do |user_challenge| %>

          <%= link_to challenge_path(user_challenge.challenge) do %>
          <div class="element">
            <div class="badge-tasks <%= current_badge(user_challenge.challenge.category) %>">
              <%= cl_image_tag user_challenge.challenge.picture, crop: :fill, height: 30 %>
            </div>
            <div class="program-title-task"><%= user_challenge.challenge.title %></div>
          </div>
        <% end %>
        <% end %>
        </div> <!-- elements -->
      </div> <!-- col-12 -->
    </div> <!-- row -->
  </div> <!-- container -->

  <div class="container no-space" id="footer-pad">
    <div class="row">
      <div class="col-12">
        <div class="title-thema spacing-margin">CHALLENGERS</div>
        <div class="elements">

        <% @challengers.each do |challenger| %>

          <%= link_to challenge_path(challenger.user_challenge.challenge) do %>
          <div class="element">
            <%= cl_image_tag challenger.user_challenge.user.avatar, :class => "badge-avatar bt-white" %>
            <div class="program-title-task pseudo pseudo-mini"><%= challenger.user_challenge.user.pseudo %></div>
          </div>
        <% end %>
        <% end %>
        </div> <!-- elements -->
      </div> <!-- col-12 -->
    </div> <!-- row -->
  </div> <!-- container -->
</div>
