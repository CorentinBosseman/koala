<div class="container-task">
  <div class="program-content text-center">
  <h1><%= @program.title  %></h1>
  <hr width="50%"/>
  </div>

  <% @tasks.each do |task| %>
    <% if task.completed %>
        <%= link_to program_task_path(@program, task) do%>
      <div class="badge-task-validated mb-5">
      </div>
      <% end %>
    <% elsif task.status == 'ongoing' %>
        <%= link_to program_task_path(@program, task) do%>
      <div class="badge-task-ongoing mb-5">
      </div>
      <% end %>
    <% else %>
      <div class="badge-task-locked mb-5"></div>
    <% end %>
  <% end %>
</div>



