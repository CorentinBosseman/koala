<div class="container-task">
  <div class="program-content text-center">
  <h1><%= @program.title  %></h1>
  <hr width="50%"/>
  </div>

      <% @tasks.each_with_index do |task, index| %>
      <div class="<%= index % 3 == 0 ? 'col-12' : 'col-6' %>">
        <% if task.completed %>
            <%= link_to program_task_path(@program, task) do%>
          <div class="badge-task-validated mb-5"></div>
          <% end %>
        <% elsif task.status == 'ongoing' %>
            <%= link_to program_task_path(@program, task) do%>
          <div class="badge-task-ongoing mb-5"></div>
          <% end %>
        <% else %>
          <div class="badge-task-locked mb-5"></div>
        <% end %>
      <% end %>
      </div>
    </div>


  <%#= task.title %>
  <%#= task.completed %>

      <%#= link_to "Valider", done_user_task_path(task.user_task_id), method: :patch, class: "btn btn-ghost btn-border-blue"%>
