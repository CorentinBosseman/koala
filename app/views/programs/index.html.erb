
 <div id="bottom-page">
  <div class="pseudo text-capitalize" id="dash-ban"><%= current_user.pseudo %>
    <div ><%= cl_image_tag @current_user.avatar, :class => "top-avatar bt-white" %></div>
  </div>

  <div class="container no-space bkg-yellow">
    <div id="top-pos">
      <%= link_to "Programmes", programs_path, class: " btn btn-unswitch"  %><%= link_to "Challenges ", challenges_path, class: " btn btn-switch"  %>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="title-thema adjust-badge-pos" id="tt-padtop">NOURRITURE</div>
        <div class="elements">

        <% @programs_food.each_with_index do |program, index| %>

              <%= link_to program_path(program) do%>
          <div class="element">
            <div class="badge-tasks bt-yellow">
              <%= cl_image_tag program.icon, crop: :fill, height: 30 %>
            </div>
            <div class="program-title-task"><%= program.title %></div>
            <% if ['ongoing', 'completed'].include?(program.status) || index == 0 || @programs_food[index - 1].completed? %>
            <% end %>
          </div>
        <% end %>
        <% end %>
        </div> <!-- elements -->
      </div> <!-- col-12 -->
    </div> <!-- row -->
  </div> <!-- container -->
