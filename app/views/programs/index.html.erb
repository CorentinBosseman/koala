 <div id="bottom-page">
  <div class="container no-space bkg-yellow">
    <div class="row">
      <div class="col-12">
        <div class="title-thema" id="tt-padtop">NOURRITURE</div>
        <div class="elements">

        <% @programs_food.each_with_index do |program, index| %>

              <%= link_to program_path(program) do%>
          <div class="element">
            <div class="badge-tasks bt-yellow"></div>
            <div class="program-title-task"><%= program.title %></div>
            <% if ['ongoing', 'completed'].include?(program.status) || index == 0 || @programs_food[index - 1].completed? %>
            <% end %>
          </div>
        <% end %>
        <% end %>
        </div> <!-- elements -->
      </div> <!-- col-12 -->
    </div> <!-- row -->
  </div> <!-- container -->
