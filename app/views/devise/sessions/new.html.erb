<div class="container bkg-login">
  <!-- <h2 class="title-thema">Log in</h2> -->
  <%= image_tag("login_avatar.png", :alt => "Avatar silouhette image", :class =>"avatar-login") %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="program-title-task form-input">
      <%= f.input :email,label_html: { class: 'text-login' },
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'form-input'} %>
      <%= f.input :password,label_html: { class: 'text-login' },
                  required: false,
                  input_html: { autocomplete: "current-password", class: 'form-input' } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions program-title-task form-input">
      <%= f.button :submit, "Log in", :class =>" btn-main btn-pos" %>
    </div>
  <% end %>
</div>
