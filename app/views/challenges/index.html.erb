<div id="bottom-page">

  <%= render "shared/topnav" %>

  <div class="bkg-yellow">
    <div class="text-center">
    <%= link_to "Programmes", programs_path, class: "btn btn-unswitch-challenges"  %><%= link_to "Challenges ", challenges_path, class: " btn btn-switch-challenges"  %>
    </div>

    <div class="title-thema adjust-badge-pos" id="minus-pad-top">Nourriture</div>
    <div class="elements">

      <% @challenges_food.each do |challenge| %>
        <%= link_to challenge_path(challenge), class: 'element' do %>
            <div class="badge-tasks bt-yellow">
              <%= cl_image_tag challenge.icon, crop: :fill, height: 30 %>
            </div>
            <div class="program-title-task"><%= challenge.title %></div>
        <% end %>
      <% end %>
    </div> <!-- elements -->
  </div>

  <div class="bkg-green">
    <div class="title-thema adjust-badge-pos">Déchets</div>
    <div class="elements">

      <% @challenges_waste.each do |challenge| %>
        <%= link_to challenge_path(challenge), class: 'element' do %>
            <div class="badge-tasks bt-green">
              <%= cl_image_tag challenge.icon, crop: :fill, height: 30 %>
            </div>
            <div class="program-title-task"><%= challenge.title %></div>
        <% end %>
      <% end %>
    </div> <!-- elements -->
  </div>

  <div class="bkg-blue">
    <div class="title-thema adjust-badge-pos">Énergie</div>
    <div class="elements">
      <% @challenges_energy.each do |challenge| %>
        <%= link_to challenge_path(challenge), class: 'element' do %>
            <div class="badge-tasks bt-blue">
              <%= cl_image_tag challenge.icon, crop: :fill, height: 30 %>
            </div>
            <div class="program-title-task"><%= challenge.title %></div>
        <% end %>
      <% end %>
    </div> <!-- elements -->
  </div>

  <div class="bkg-red">
    <div class="title-thema adjust-badge-pos">Transport</div>
    <div class="elements">
      <% @challenges_transport.each do |challenge| %>
        <%= link_to challenge_path(challenge), class: 'element' do %>
            <div class="badge-tasks bt-red">
              <%= cl_image_tag challenge.icon, crop: :fill, height: 30 %>
            </div>
            <div class="program-title-task"><%= challenge.title %></div>
        <% end %>
      <% end %>
    </div> <!-- elements -->
  </div>

   <%= link_to new_challenge_path, class: 'btn btn-main d-flex justify-content-center' do %>
   <span>Créer votre challenge</span>
   <% end %>


   <div class="bkg-green">
    <div class="title-thema adjust-badge-pos">Vos Challenges Créés</div>
    <div class="elements">
        <% @challenges_custom.each do |challenge| %>
      <% if challenge.owner == current_user.id %>
          <%= link_to challenge_path(challenge), class: 'element' do %>
              <div class="badge-tasks bt-green">
                <%= cl_image_tag challenge.icon, crop: :fill, height: 30 %>
              </div>
              <div class="program-title-task"id="bottom-page"><%= challenge.title %></div>
          <% end %>
        <% end %>
      <% end %>
    </div> <!-- elements -->
  </div>
</div>
