<% if @challenge.category == "DÃ©chets" %>
  <div class="background-color-program-waste">
  <% elsif @challenge.category == "Nourriture" %>
  <div class="background-color-program-food">
  <% elsif @challenge.category == "Transport" %>
  <div class="background-color-program-transport">
  <% else %>
  <div class="background-color-program-energy">
<% end %>
    <div class="challenge-content text-center">
    <%= cl_image_tag @challenge.picture, :class => "program_image" %>
    <h1 class="title-thema"><%= @challenge.title  %></h1>
    <hr width="50%"/>
    <p class="program-desc mb-5"><%= @challenge.description %></p>
    <%= simple_form_for [@challenge, @user_challenge] do |f| %>
      <div class="form-group radio_buttons optional user_challenge_duration d-flex justify-content-center">
        <input type="hidden" name="user_challenge[duration]" value="">
        <% UserChallenge::DURATIONS.each do |duration| %>
          <div class="form-check form-check-inline mb-4 mx-1">
            <div>
              <input class="form-check-input radio_buttons optional duration-radio-input" hidden type="radio" value="<%= duration %>" name="user_challenge[duration]" id="user_challenge_duration_<%= duration %>" <%= 'checked' if duration == 7 %>>
              <label class="form-check-label collection_radio_buttons duration-radio-label btn-day-inact" for="user_challenge_duration_<%= duration %>"><%= duration %> jours</label>
            </div>
          </div>
        <% end %>
     </div>
    <%= f.button :submit, "Commencer", class: "reservation-submit btn btn-main" %>
    <% end %>
  </div>
</div>
